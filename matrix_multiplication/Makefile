#------------------------------------------------------------------------------
# Project's name
#------------------------------------------------------------------------------
PROGRAM = triangle_calculator

#------------------------------------------------------------------------------
# Directories
#------------------------------------------------------------------------------
SRC_DIR = src

#------------------------------------------------------------------------------
# All source and objects files
#------------------------------------------------------------------------------
SOURCE = ${wildcard $(SRC_DIR)/*.c}

#------------------------------------------------------------------------------
# Alias to commands
#------------------------------------------------------------------------------
MKDIR_P = mkdir -p
LINK_FORCE = ln -fn

#------------------------------------------------------------------------------
# Compilator and flags
#------------------------------------------------------------------------------
CC = gcc
CFLAGS = -lpthread -std=c11


#------------------------------------------------------------------------------
# Executable's name
#------------------------------------------------------------------------------
EXECUTABLE = run

.PHONY: clean

all: $(PROGRAM)

$(PROGRAM): $(SOURCE)
	@echo "Initing compilation..."
	@echo "Compile source files"
	$(CC) $(SRC_DIR)/3a.c -o run_3a $(CFLAGS)
	$(CC) $(SRC_DIR)/3b.c -o run_3b $(CFLAGS)
	$(CC) $(SRC_DIR)/3c.c -o run_3c $(CFLAGS)
	@echo "Done!"

clean:
	@echo "Excluding..."
	@echo "Clean executables..."
	rm -f run_3a
	rm -f run_3b
	rm -f run_3c
	@echo "Ready exclusion!"
